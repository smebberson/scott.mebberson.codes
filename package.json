{
  "name": "scott.mebberson.codes",
  "version": "1.0.0",
  "description": "A blog by Scott Mebberson.",
  "repository": "https://github.com/smebberson/scott.mebberson.codes.git",
  "author": "Scott Mebberson <scott@scottmebberson.com>",
  "license": "CC-BY-NC-ND+GNU GPL v3",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev -p 4040",
    "action:next:build": "docker build --tag smc-next:latest actions/next",
    "action:publish:build": "docker build --tag smc-publish:latest actions/publish",
    "action:yarn:build": "docker build --tag smc-yarn:latest actions/yarn",
    "export": "next export",
    "serve": "serve -p 4040 ./out",
    "workflow": "yarn run-s workflow:step:build workflow:step:export workflow:step:publish",
    "workflow:step:setup": "docker run -v ~/Developer/scott.mebberson.codes:/github/workspace --rm --workdir /github/workspace smc-yarn:latest install",
    "workflow:step:build": "docker run -v ~/Developer/scott.mebberson.codes:/github/workspace --rm --workdir /github/workspace smc-next:latest build",
    "workflow:step:export": "docker run -v ~/Developer/scott.mebberson.codes:/github/workspace --rm --workdir /github/workspace smc-next:latest export",
    "workflow:step:publish": "docker run -e GITHUB_WORKSPACE=/github/workspace -v ~/Developer/scott.mebberson.codes:/github/workspace --rm --workdir /github/workspace smc-publish:latest"
  },
  "dependencies": {
    "express": "4.16.4",
    "next": "8.0.3",
    "react": "16.8.4",
    "react-dom": "16.8.4",
    "react-syntax-highlighter": "10.2.1"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "serve": "10.1.2"
  }
}
